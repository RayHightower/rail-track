<h2>Add New Movie</h2>

<%= form_for(@movie, url: create_movie_path) do |form| %>
  <%= form.label(:title) %>
  <%= form.text_field(:title) %>

  <%= form.label(:release_date) %>
  <%= form.date_field(:release_date) %>

  <%= form.label(:description) %>
  <%= form.text_field(:description) %>

  <%= form.submit %>
<% end %>
